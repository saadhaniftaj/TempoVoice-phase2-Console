# ðŸš€ TempoVoice Dashboard Environment Variables

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000
ALB_ENDPOINT=https://your-alb-endpoint.com

# Database Configuration
DATABASE_URL="file:./dev.db"
# For production: DATABASE_URL="postgresql://user:password@host:5432/database"

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-256-bits-minimum

# Email Configuration (for user invites)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS Configuration (for agent deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Nova Sonic API (for agent configuration)
NOVA_API_KEY=your-nova-sonic-api-key

# Twilio Configuration (for webhooks)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Feature Flags
ENABLE_EMAIL_INVITES=true
ENABLE_AGENT_DEPLOYMENT=true
ENABLE_CALL_RECORDING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000

# External Services
MAKE_COM_WEBHOOK_BASE=https://hook.eu1.make.com
WHATSAPP_WEBHOOK_URL=your-whatsapp-webhook-url
