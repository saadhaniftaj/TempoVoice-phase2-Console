# Tempo Voice - Environment Configuration Template
# Copy this file to .env.local for development or .env.production for production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development (SQLite)
DATABASE_URL="file:./dev.db"

# Production (PostgreSQL)
# DATABASE_URL="postgresql://username:password@localhost:5432/tempo_dashboard?schema=public"

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
# AWS Credentials for Bedrock Nova Sonic AI
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_PROFILE=bedrock-test

# =============================================================================
# TWILIO CONFIGURATION
# =============================================================================
# Twilio Programmable Voice
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_API_SECRET=your-twilio-api-secret
TWILIO_API_SID=your-twilio-api-sid

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug logging
DEBUG=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
